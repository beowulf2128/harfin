  <tr>
    <th>Date</th>
    <th>Bk/Bible/Att</th>
    <th>Truthbook</th>
    <th>Rec'd by</th>
    <th>Points</th>
  </tr>
  <% @scoresheet.lines.each do |line_date, line_data|  %>
    <tr class="">
      <td><%= line_date %> </td>
      <td><%= book_bible_att(line_data) %> </td>
      <td><%= tb_signas(line_data)%> </td>
    </tr>
  <% end %>
</table>

