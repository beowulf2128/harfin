<p id="notice"><%= notice %></p>

<h1>Sessionyears</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>Year</th>
      <th>Theme</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th></th>
      <th></th>
      <th></th>
      <th>Reg Count</th>
      <th>Avg Att</th>
    </tr>
    <% @sessionyears.each do |sessionyear| %>
      <tr>
        <td><%= sessionyear.year %>
        <% if sessionyear.has_cal? %>
          <a href="/calendar/<%= sessionyear.id %>">calendar</a>
        <% else %>
          <%= button_to 'Generate',("/calendar/#{sessionyear.id}"), :method=>:post %>
        <% end %>
        </td>
        <td><%= sessionyear.theme %></td>
        <td><%= sessionyear.start_date.to_formatted_s :mdy %></td>
        <td><%= sessionyear.end_date.to_formatted_s :mdy %></td>
        <td><%= link_to 'Show', sessionyear %></td>
        <td><%= link_to 'Edit', edit_sessionyear_path(sessionyear) %></td>
        <td><%= link_to 'Destroy', sessionyear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sessionyear', new_sessionyear_path %>
