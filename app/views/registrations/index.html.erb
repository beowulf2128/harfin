<h1><%= @selected_session_year.year %> Registrations</h1>
<p>Switch to:
<% @all_session_years.each do |sy| %>
  <%= link_to sy.year, sessionyear_registrations_path(sy) %> |
<% end %>
</p>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th colspan="3">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= link_to registration.person.name_lf, registration %></td>
        <td><%= link_to 'Scoresheet', "/scores/#{registration.id}"  %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_registration_path %>
