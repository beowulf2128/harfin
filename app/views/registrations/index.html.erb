<h1><%= @selected_session_year.year %> Registrations</h1>
<p>Switch to:
<% @all_session_years.each do |sy| %>
  <%= (sy == @selected_session_year) ? sy.year : link_to(sy.year, sessionyear_registrations_path(sy)) %> |
<% end %>
</p>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Book</th>
      <th>Points</th>
      <th>Pace</th>
      <th colspan="3"> </th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <% person = registration.person %>
      <% stats = registration.progress_stats %>
      <tr>
        <td><%= link_to person.name_lf, registration %></td>
        <td><%= team_color(person) %></td>
        <td><%= person.current_truthbook.name %></td>
        <td><%= person.current_points %></td>
        <td><%= gold_pace(stats) %></td>
        <td><%= link_to 'Scoresheet', "/scores/#{registration.id}"  %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_registration_path %>
