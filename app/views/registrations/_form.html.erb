<%= render partial: 'shared/flash_error',locals:{model: registration} %>

<%= form_for(registration) do |f| %>
  <div class='form-group'>
    <%= f.label :person %>
    <%= @registration.person.name_lf  %>
    <%= f.hidden_field :person_id, :value=>@registration.person_id  %>
  </div>
  <div class='form-group'>
    <%= f.label :type %>
    <%= f.select :reg_type, %w{Clubber Leader}, {}, class:"form-control" %>
  </div>
  <div class='form-group'>
    <%= f.label :group_assignment %>
    <%= f.select :group_assignment, [nil, Registration::YOUNGER, Registration::OLDER], {}, class:"form-control"  %>
  </div>
  <div class='form-group'>
    <%= f.label :team_name %>
    <%= f.select :team_name, [nil, Registration::RED, Registration::BLUE], {}, class:"form-control"  %>
  </div>
  <div class='form-group'>
    <%= f.label :table_assignment %>
    <%= f.select :table_assignment, (1..12) , {}, class:"form-control" %>
  </div>
  <div class='form-group'>
    <%= f.label :sessionyear %>
    <%= f.select :sessionyear_id,  Sessionyear.vals_for_select, {}, class:"form-control"  %>
  </div>
  <div class='form-group'>
    <%#= f.label :background_check %>
    <%#= f.label :k4t_form %>
    <%#= f.label :k4t_pols_procs %>
    <%#= f.label :tbc_form %>
  </div>

  <%= link_to 'Cancel', registrations_path, class:"btn btn-secondary", role:"button" %>
  <%= f.submit class:'btn btn-primary' %>
<% end %>
